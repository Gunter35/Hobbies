@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>see everything</b>.
    </p>
    <p class="lead mt-1">
        You can also see <b>all users </b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Books" asp-action="All"
       class="btn btn-primary btn-lg">All Books</a>
    <a asp-area="" asp-controller="Books" asp-action="Add"
       class="btn btn-primary btn-lg">Add Book</a>
    <span>  |   </span>
    <a asp-area="" asp-controller="Movies" asp-action="All"
       class="btn btn-primary btn-lg">All Movies</a>
    <a asp-area="" asp-controller="Movies" asp-action="Add"
       class="btn btn-primary btn-lg">Add Movie</a>
    <span>  |   </span>
    <a asp-area="" asp-controller="Games" asp-action="All"
       class="btn btn-primary btn-lg">All Games</a>
    <a asp-area="" asp-controller="Games" asp-action="Add"
       class="btn btn-primary btn-lg">Add Games</a>
      <br>
      <br>
    <a asp-area="Admin" asp-controller="Books" asp-action="Mine"
       class="btn btn-primary btn-lg">My Books</a>
       <a asp-area="Admin" asp-controller="Movies" asp-action="Mine"
       class="btn btn-primary btn-lg">My Movies</a>
       <a asp-area="Admin" asp-controller="Games" asp-action="Mine"
       class="btn btn-primary btn-lg">My Games</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Users" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>